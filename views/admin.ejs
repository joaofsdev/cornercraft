<%- include('partials/header') %>
<div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center py-8 px-2">
    <div class="w-full max-w-3xl bg-white rounded-2xl shadow-2xl p-8 border border-gray-200">
        <h2 class="text-4xl font-extrabold text-gray-800 mb-8 text-center tracking-tight">Painel Administrativo</h2>
        <% if (erro) { %>
            <div class="mb-6">
                <p class="text-red-600 bg-red-100 border border-red-300 rounded-lg px-4 py-2 text-center text-base font-medium shadow"> <%= erro %> </p>
            </div>
        <% } %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
            <div class="bg-green-50 p-6 rounded-xl shadow border border-gray-200 flex flex-col items-center">
                <p class="text-gray-800 font-semibold">Usuários</p>
                <p class="text-3xl text-gray-800 font-extrabold"><%= dados.total_usuarios %></p>
            </div>
            <div class="bg-green-50 p-6 rounded-xl shadow border border-gray-200 flex flex-col items-center">
                <p class="text-gray-800 font-semibold">Vídeos</p>
                <p class="text-3xl text-gray-800 font-extrabold"><%= dados.total_videos %></p>
            </div>
            <div class="bg-green-50 p-6 rounded-xl shadow border border-gray-200 flex flex-col items-center">
                <p class="text-gray-800 font-semibold">Visualizações</p>
                <p class="text-3xl text-gray-800 font-extrabold"><%= dados.total_visualizacoes %></p>
            </div>
            <div class="bg-green-50 p-6 rounded-xl shadow border border-gray-200 flex flex-col items-center">
                <p class="text-gray-800 font-semibold">Categorias Populares</p>
                <ul class="text-gray-800 mt-2">
                    <% dados.categorias_populares.forEach(cat => { %>
                        <li class="text-base"><%= cat.nome_categoria %> (<%= cat.contagem %>)</li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 mb-4 text-center">Usuários</h3>
        <ul class="space-y-6">
            <% usuarios.forEach(usuario => { %>
                <li class="flex flex-col md:flex-row md:justify-between md:items-center p-6 bg-gray-50 rounded-xl shadow-lg border border-gray-200 hover:shadow-2xl transition">
                    <span class="text-gray-800 font-semibold text-lg"><%= usuario.nome %> (<%= usuario.email %>)</span>
                    <a href="/admin/banir/<%= usuario.id %>" class="mt-4 md:mt-0 bg-red-500 text-white px-6 py-2 rounded-lg font-bold hover:bg-red-600 shadow focus:outline-none focus:ring-2 focus:ring-red-300 focus:ring-opacity-50 transition">Banir</a>
                </li>
            <% }) %>
        </ul>
        <div class="mt-10 flex flex-col md:flex-row justify-center gap-4">
            <a href="/admin/gerenciar-categorias" class="bg-green-500 text-white px-8 py-3 rounded-xl hover:bg-green-600 text-lg font-bold shadow-lg focus:outline-none focus:ring-2 focus:ring-green-300 focus:ring-opacity-50 transition">Gerenciar Categorias</a>
            <a href="/admin/moderar" class="bg-green-500 text-white px-8 py-3 rounded-xl hover:bg-green-600 text-lg font-bold shadow-lg focus:outline-none focus:ring-2 focus:ring-green-300 focus:ring-opacity-50 transition">Moderar</a>
        </div>
    </div>
</div>
<%- include('partials/footer') %>