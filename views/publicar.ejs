<%- include('partials/header') %>

<main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Publicar Tutorial</h1>
            <p class="text-gray-600">Compartilhe seu conhecimento com a comunidade</p>
